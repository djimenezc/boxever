# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           				   controllers.Application.index()
GET     /currency/refresh/:value        controllers.Application.refresh(value: String)
GET     /currency/refresh/all             controllers.Application.refreshAll()
GET     /currency/get/:value              controllers.Application.getCurrencyRateData(value: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
